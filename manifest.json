{
  "manifest_version": 2,
  "name": "pastel tab",
  "version": "1.0.0",
  "description": "A port of @williamyeny's chrome extension 'pastel tab' for Firefox. Created with help from/thanks to @MethodGrab and their Custom New Tab extension.",
  "developer": {
    "name": "m4xic",
    "url": "https://github.com/m4xic/pastel-tab"
  },
  "icons": {
    "48": "img/48.png",
    "96": "img/96.png"
  },
  "applications": {
    "gecko": {
      "id": "pastel-tab@chun.si",
      "strict_min_version": "57.0"
    }
  },
  "optional_permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "chrome_url_overrides" : {
    "newtab": "app.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
